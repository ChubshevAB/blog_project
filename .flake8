[flake8]
exclude =
    .venv,
    venv,
    env,
    .env,
    .git,
    __pycache__,
    migrations,
    *.sqlite3,
    *.pyc,
    settings.py,
    manage.py,
    .flake8,
    .gitignore,
    requirements.txt

max-line-length = 100

ignore =
    E203,
    W503,
    E501,
    F401,
    F403,
    E402,
    C901

filename = *.py
recursive = true
statistics = true
format = default
